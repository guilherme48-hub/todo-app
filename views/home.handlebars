<main>
    <section class="tarefas">
        {{#each tarefa}}
        <div class="tarefa">
            <form action="">
                {{#if this.completa}}
                <div class="completa">
                    <input type="checkbox" id="tarefa-{{this.id}}" checked onchange="descompletarTarefa({{this.id}})">
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>
                {{else}}
                <div>
                    <input type="checkbox" id="tarefa-{{this.id}}" onchange="completaTarefa({{this.id}})">
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>
                {{/if}}

                <button>
                    <img src="/imagens/x-icon.png" alt="Ícone de x para excluir ">
                </button>
            </form>
        </div>
        {{/each}}
        <div class="info">
            <p>{{quantidadeTarefasAtivas}} tarefas ativas</p>

            <div class="botoes">
                <a href="" class="active">todas</a>
                <a href="">ativas</a>
                <a href="">completas</a>
            </div>

            <a href="">limpar tarefa</a>
        </div>
    </section>

    <section class="botoes">
        <a href="" class="active">todas</a>
        <a href="">ativas</a>
        <a href="">completas</a>
    </section>
</main>
