<main>
    <section class="tarefas">
        {{#each tarefa}}
        <div class="tarefa">
            <form action="">
                
                <div>
                    <input type="checkbox" id="tarefa-{{this.id}}" onchange="completaTarefa({{this.id}})">
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>
            

                <button>
                    <img src="/imagens/x-icon.png" alt="Ícone de x para excluir ">
                </button>
            </form>
        </div>
        {{/each}}
        <div class="info">
            <p>{{quantidadeTarefasAtivas}} tarefas ativas</p>

            <div class="botoes">
                <a href="/" >todas</a>
                <a href="/ativas" class="active">ativas</a>
                <a href="/completas">completas</a>
            </div>

            <a href="">limpar tarefa</a>
        </div>
    </section>

    <section class="botoes">
        <a href="/" >todas</a>
        <a href="/ativas" class="active">ativas</a>
        <a href="/completas">completas</a>
    </section>
</main>
